{
    "compilerOptions": {
        "target": "ES3",
        "module": "CommonJS",
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "removeComments": true,
        "sourceMap": false,

        // "declaration": true,
        // "declarationMap": true,

        "allowJs": true,

        // Compile to lib
        "rootDir": "src",
        "outDir": "lib",

        "importHelpers": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/vml/*.ts"
    ]
}